
<%= simple_form_for(@todo_list) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :Name %>
  </div>
  <div class="tasks">
    <%= f.simple_fields_for :tasks do |builder,index| %>
      <%= render 'task_fields', f: builder ,node_counter: index %>
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to_add_association '+add', f, :tasks , class: 'btn btn-xs btn-primary',data: {
         association_insertion_node: '.tasks' ,
         association_insertion_method: :append} %>
  </div>
<% end %>
