<header class="paragraphs form-group">
    <div class="row text-center">
        <div class="col-12">
            <h5><%= @headsub1%></h5>
        </div>
        <div class="col-12">
            <h5 class="text-danger"><%= @headwarning%></h5>
        </div>
    </div>
</header>
<div class="card-group">
  <div class="card border-0 ">
    <div class="card-body">
    </div>
    <div class="card-footer border-0 bg-white">
       <%= link_to @newusertext , sign_up_path, method: "get" ,class: "btn btn-primary  btn-lg form-control box-shadow--8dp "%> 
    </div>
  </div>
  
  <%= simple_form_for(resource, as: resource_name, url: sign_in_path,html: {class: "card border-0"}) do |f| %>
      <div class="card-body">
        <%= f.input :email, required: true, autofocus: true ,label: false,placeholder: "Username or Email" %>
        <%= f.input :password, required: true ,label: false,placeholder: "Password"%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="card-footer border-0 bg-white">
        <%= f.button :submit, @tosurveytext ,class: "btn btn-success  btn-lg form-control box-shadow--8dp "%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <% end -%>
      </div>
  <% end %>
</div>
<div class="card-group">
  <div class="card border-0 ">
      <div class="card-footer border-0 bg-white"></div>
  </div>
  <div class="card border-0 ">
      <div class="card-footer border-0 bg-white text-right">
         <%= link_to @forgetpassowrd, new_password_path(resource_name) %><br />
      </div>
  </div>
</div>