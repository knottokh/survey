<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="p-4">
  <div class="container">
    <header class="paragraphs form-group">
        <div class="row form-group">
            <div class="col" style="max-width:100px"><%= image_tag("logo.png",style: "height:120px") %></div>
            <div class="col"><h2 class="text-primary"><%= t('val.headertext') %></h2></div>
        </div>
    </header>
  <% if params[:notice] %>
  <div class="alert alert-danger" role="alert"><%= params[:notice] %></div>
  <% end %>
  <% if notice %>
   <p class="notice-alert notice"><%= notice %></p>
  <% end %>
  <% if alert %>
   <p class="alert"><%= alert %></p>
  <% end %>
  <% if @master_case == 1 %>
    <div class="row">
        <div class="col-sm-3">
             <% if current_user %>
                <div class="card form-group">
                 <div class="card-header bg-info">
                        ข้อมูลโรงเรียน
                  </div> 
                  <div class="card-body">
                       <%= current_user.school.school_name %> 
                  </div>
                </div>
                <div class="card">
                 <div class="card-header bg-warning">
                        ข้อมูลผู้ใช้งาน
                  </div> 
                  <div class="card-body">
                      <span class="col"> <%= current_user.username %> </span>
                      <div class="col text-right"><%= link_to "Log Out", logout_path, method: "delete" ,class: "btn btn-danger"%> </div>
                  </div>
                </div>
            <% end %>  
        </div>
        <div class="col-sm-9">
              <%= yield %>
        </div>
    </div>
 <% elsif  @master_case == 2 %>
    <div class="row">
        <div class="col-12">
             <% if current_user %>
                 <span class="col">Log in as : <%= current_user.username %>  <%= link_to "Log Out", logout_path, method: "delete" ,class: "btn btn-danger"%></span>
            <% end %>  
        </div>
        <div class="col-12">
              <%= yield %>
        </div>
    </div>
 <% else %>
        <%= yield %>
      
  <% end %>  
   </div> 
   <a href="#" class="scrollToTop"><i class="fa fa-angle-up"></i> Back to top</a>
</body>
</html>
