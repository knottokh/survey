<div class="jumbotron vertical-center ">
  <% if flash[:login_errors] %>
    <% flash[:login_errors].each do |error| %>
      <div class="alert alert-danger" role="alert"><%=error%></div>
    <%end%>
<%end%>
  <div class="row justify-content-md-center">
    <div class="col-sm-6 col-sm-6">
      <div class="card border-primary">
          <div class="card-header bg-info text-white text-center">
            Log In
          </div>
            <%= form_for :login , as: :post, url: sessions_path,:html => {:class => 'card-body'} do |f| %>
                  <div class="form-group">
                      <label for="login_username" class="col-form-label">Username</label>
                      <%= f.text_field :username,class: "form-control" ,placeholder: "Username"%>
                  </div>
                  <div class="form-group">
                      <label for="login_username" class="col-form-label">Password</label>
                      <%= f.password_field :password,class: "form-control" ,placeholder: "Password" %>
                  </div>
                  <div class="form-group text-right">
                    <%= f.submit 'Sign In' ,class: "btn btn-success" %>
                  </div>
                  <div class="form-group">                  
                    <%= link_to "Cancel", root_path, method: "get"%> 
                  </div>
            <% end %>
           
      </div>
    </div>
  </div>
</div>
